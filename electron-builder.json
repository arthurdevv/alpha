{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "alpha.app",
  "productName": "Alpha",
  "files": ["target/**/*"],
  "directories": {
    "output": "release"
  },
  "extraMetadata": {
    "main": "target/index.js"
  },
  "extraResources": [
    {
      "from": "resources/clink",
      "to": "clink"
    },
    {
      "from": "resources/themes",
      "to": "themes"
    },
    {
      "from": "target/",
      "to": "bin",
      "filter": ["cli*"]
    },
    {
      "from": "cli/",
      "to": "bin",
      "filter": ["alpha*"]
    }
  ],
  "publish": {
    "provider": "github",
    "owner": "arthurdevv",
    "repo": "alpha",
    "releaseType": "release"
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "nsis": {
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "include": "build/windows/installer.nsh",
    "installerIcon": "build/icon.ico",
    "shortcutName": "Alpha",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  },
  "npmRebuild": false
}
