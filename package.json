{
  "name": "alpha",
  "productName": "Alpha",
  "description": "A rapid and elegant open-source terminal built with web technologies.",
  "version": "0.1.0",
  "license": "MIT",
  "author": {
    "name": "Arthur Henrique",
    "email": "arthurhenrique.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arthurdevv/alpha.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "dev": "pnpm run tsc && concurrently -k \"pnpm run dev:renderer\" \"pnpm run dev:server\"",
    "dev:server": "wait-on http-get://localhost:4000/ && pnpm run dev:electron",
    "dev:renderer": "cross-env NODE_ENV=development webpack serve --config-name renderer",
    "dev:electron": "cross-env NODE_ENV=development webpack --config-name main && electron dist",
    "package": "rimraf release && pnpm run tsc && cross-env NODE_ENV=production webpack && electron-builder",
    "tsc": "rimraf dist && tsc -b -v",
    "lint": "eslint --ext .tsx,.ts,.js",
    "test": "jest --passWithNoTests --detectOpenHandles",
    "rebuild-pty": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^1.0.2",
    "@electron/remote": "2.0.9",
    "@reduxjs/toolkit": "^1.9.3",
    "chokidar": "^3.5.3",
    "electron-updater": "^5.3.0",
    "mousetrap": "1.6.5",
    "native-reg": "^1.1.1",
    "node-gyp-build": "^4.6.0",
    "node-pty": "0.10.1",
    "preact": "^10.12.1",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-redux": "^8.0.5",
    "rimraf": "^4.1.2",
    "seamless-immutable": "^7.1.4",
    "styled-components": "^5.3.6",
    "uuid": "^9.0.0",
    "xterm": "5.1.0",
    "xterm-addon-fit": "^0.7.0",
    "xterm-addon-ligatures": "^0.6.0",
    "xterm-addon-unicode11": "^0.5.0",
    "xterm-addon-web-links": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-react-jsx": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@electron/notarize": "^1.2.3",
    "@electron/rebuild": "^3.2.10",
    "@types/jest": "^29.4.0",
    "@types/mousetrap": "^1.6.11",
    "@types/node": "18.14.0",
    "@types/react-redux": "^7.1.25",
    "@types/seamless-immutable": "^7.1.16",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-loader": "^9.1.2",
    "babel-plugin-styled-components": "^2.0.7",
    "babel-preset-preact": "^2.0.0",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "13.5.2",
    "electron-builder": "^23.6.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "node-gyp": "^9.3.1",
    "playwright": "^1.31.0",
