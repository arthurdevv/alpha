{
  "name": "alpha",
  "productName": "Alpha",
  "description": "A rapid and modern open-source terminal built with web technologies.",
  "version": "0.7.0",
  "license": "MIT",
  "author": {
    "name": "Arthur Henrique",
    "email": "arthurhenrique.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arthurdevv/alpha.git"
  },
  "scripts": {
    "dev": "yarn run tsc && cross-env NODE_ENV=development concurrently -k \"yarn run dev:renderer\" \"yarn run dev:server\"",
    "dev:server": "wait-on http-get://localhost:4000/ && yarn run dev:electron",
    "dev:renderer": "webpack serve --config-name renderer",
    "dev:electron": "webpack --config-name main && electron target",
    "package": "rimraf release && yarn run tsc && cross-env NODE_ENV=production webpack && electron-builder",
    "tsc": "rimraf target && tsc -b -v",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-pty": "electron-rebuild -f -o node-pty -m target"
  },
  "dependencies": {
    "@electron/remote": "2.1.2",
    "@xterm/addon-canvas": "^0.7.0",
