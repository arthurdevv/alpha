    "native-reg": "^1.1.1",
    "node-gyp-build": "4.8.4",
    "node-pty": "1.0.0",
    "preact": "10.25.0",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "rimraf": "^5.0.5",
    "styled-components": "6.1.13",
    "uuid": "11.0.3",
    "zustand": "5.0.1"
